// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 사용자 (담당자)
model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  avatar    String?
  role      String    @default("member") // admin, member
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  assignedProjects ProjectAssignee[]
  comments         Comment[]
  calendarAttendees CalendarAttendee[]
}

// 프로젝트 (상위/하위 프로젝트 모두 포함)
model Project {
  id          String    @id @default(cuid())
  name        String
  description String?   // 프로젝트 상세 내용
  goal        String?   // 목표
  keyResults  String?   // 주요 성과 (KR)
  status      String    @default("NOT_STARTED") // NOT_STARTED, IN_PROGRESS, COMPLETED
  priority    String    @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  startDate   DateTime?
  endDate     DateTime?
  progress    Int       @default(0) // 0-100 진행률
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // 상위/하위 프로젝트 관계
  parentId    String?
  parent      Project?  @relation("SubProjects", fields: [parentId], references: [id], onDelete: Cascade)
  subProjects Project[] @relation("SubProjects")

  // Relations
  assignees   ProjectAssignee[]
  comments    Comment[]
  milestones  Milestone[]
}

// 프로젝트-담당자 연결 테이블
model ProjectAssignee {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  role      String   @default("member") // lead, member
  createdAt DateTime @default(now())

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     AssigneeTask[]

  @@unique([projectId, userId])
}

// 담당자별 업무 (체크박스로 완료 여부 관리)
model AssigneeTask {
  id           String   @id @default(cuid())
  title        String   // 업무 내용
  completed    Boolean  @default(false)
  assigneeId   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  assignee     ProjectAssignee @relation(fields: [assigneeId], references: [id], onDelete: Cascade)
}

// 댓글 (프로젝트에 대한 코멘트/업데이트)
model Comment {
  id        String   @id @default(cuid())
  content   String
  projectId String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 마일스톤 (중요 이정표)
model Milestone {
  id          String    @id @default(cuid())
  name        String
  description String?
  dueDate     DateTime?
  completed   Boolean   @default(false)
  projectId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// 캘린더 일정/회의
model CalendarEvent {
  id          String    @id @default(cuid())
  type        String    // schedule(일정), meeting(회의)
  title       String
  date        DateTime  // 일정 날짜
  startTime   String?   // 시작 시간 (HH:mm)
  endTime     String?   // 종료 시간 (HH:mm)
  location    String?   // 장소 (일정)
  content     String?   // 내용 (일정)
  purpose     String?   // 회의 목적 (회의)
  result      String?   // 회의 결과 (회의)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  attendees   CalendarAttendee[]
}

// 캘린더 일정 참석자
model CalendarAttendee {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  createdAt DateTime @default(now())

  event     CalendarEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
}

// 명언 (대시보드에 랜덤 표시)
model Quote {
  id        String   @id @default(cuid())
  content   String   // 명언 내용
  author    String?  // 저자
  createdAt DateTime @default(now())
}
